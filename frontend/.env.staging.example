# ============================================
# maicivy - Staging Environment Configuration
# ============================================
# Copy this file to .env and fill in the values
# ============================================

# ============================================
# GitHub Container Registry
# ============================================
GITHUB_REPOSITORY_OWNER=yourusername

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=maicivy_staging
POSTGRES_PASSWORD=CHANGE_ME_STAGING_DB_PASSWORD
POSTGRES_DB=maicivy_staging

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_ME_STAGING_REDIS_PASSWORD

# ============================================
# Application Secrets
# ============================================
JWT_SECRET=CHANGE_ME_STAGING_JWT_SECRET
CLAUDE_API_KEY=sk-ant-api03-XXXX
OPENAI_API_KEY=sk-XXXX

# ============================================
# Monitoring
# ============================================
GRAFANA_PASSWORD=CHANGE_ME_STAGING_GRAFANA_PASSWORD

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=staging
LOG_LEVEL=debug
NODE_ENV=staging

# ============================================
# URLs
# ============================================
NEXT_PUBLIC_API_URL=https://staging.maicivy.yourdomain.com/api
PUBLIC_DOMAIN=staging.maicivy.yourdomain.com

# ============================================
# Rate Limiting (Staging - more lenient)
# ============================================
RATE_LIMIT_AI_PER_DAY=10
RATE_LIMIT_AI_COOLDOWN=60

# ============================================
# Features Flags (Staging)
# ============================================
ENABLE_AI_GENERATION=true
ENABLE_PROFILE_DETECTION=true
ENABLE_ANALYTICS=true
ENABLE_3D_EFFECTS=true
