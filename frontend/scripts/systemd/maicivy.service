[Unit]
Description=maicivy Production Stack
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/maicivy
ExecStart=/usr/bin/docker-compose -f /opt/maicivy/docker/docker-compose.prod.yml up -d
ExecStop=/usr/bin/docker-compose -f /opt/maicivy/docker/docker-compose.prod.yml down
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target
