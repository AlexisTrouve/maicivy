# ============================================
# maicivy - Production Environment Configuration
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ============================================

# ============================================
# GitHub Container Registry
# ============================================
GITHUB_REPOSITORY_OWNER=yourusername

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=maicivy
POSTGRES_PASSWORD=CHANGE_ME_PRODUCTION_DB_PASSWORD
POSTGRES_DB=maicivy

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=CHANGE_ME_PRODUCTION_REDIS_PASSWORD

# ============================================
# Application Secrets
# ============================================
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET
CLAUDE_API_KEY=sk-ant-api03-XXXX
OPENAI_API_KEY=sk-XXXX

# ============================================
# Monitoring
# ============================================
GRAFANA_PASSWORD=CHANGE_ME_PRODUCTION_GRAFANA_PASSWORD

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=production
LOG_LEVEL=info
NODE_ENV=production

# ============================================
# URLs
# ============================================
NEXT_PUBLIC_API_URL=https://maicivy.yourdomain.com/api
PUBLIC_DOMAIN=maicivy.yourdomain.com

# ============================================
# Rate Limiting (Production)
# ============================================
RATE_LIMIT_AI_PER_DAY=5
RATE_LIMIT_AI_COOLDOWN=120

# ============================================
# Features Flags (Production)
# ============================================
ENABLE_AI_GENERATION=true
ENABLE_PROFILE_DETECTION=true
ENABLE_ANALYTICS=true
ENABLE_3D_EFFECTS=true

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=28
BACKUP_DIR=/opt/maicivy/backups

# ============================================
# SSL Configuration (for Nginx)
# ============================================
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
